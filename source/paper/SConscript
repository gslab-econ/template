Import('env')

env.BuildLyx(target = ['#build/paper/paper.pdf'],
             source = ['#source/paper/paper.lyx',
                       '#build/analysis/plot.eps',
                       '#build/tables/table.lyx'])

env.BuildLyx(target = ['#build/paper/online_appendix.pdf'], 
             source = ['#source/paper/online_appendix.lyx'])

env.BuildLyx(target = ['#build/paper/text.pdf'],
             source = ['#source/paper/text.lyx'])

env.BuildLyx(target = ['#build/paper/ondeck.pdf'], 
             source = ['#source/paper/ondeck.lyx'])

env.Install('#release', '#build/paper/')
